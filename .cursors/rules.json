{
  "rules": [
    {
      "name": "Run tests and lint after changes",
      "description": "Automatically runs Jest tests and ESLint when JavaScript files are changed",
      "events": ["file_changed"],
      "pattern": "**/*.js",
      "exclude_pattern": "node_modules/**",
      "commands": [
        {
          "command": "npm test",
          "auto_approve": true
        },
        {
          "command": "npm run lint:fix",
          "auto_approve": true
        }
      ]
    }
  ]
} 